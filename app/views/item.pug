extends layout

block content

    p(class="intro-text") Here are the delicious menu items:

    // Menu Table with better styling
    table(class="menu-table", border="0")
        thead
            tr
                th 
                th Name
                th Price
                th Description
        tbody
            for items in data
                tr
                    td
                        // Display image with fallback
                        if items.imageSrc
                            img(src=items.imageSrc, alt=items.Name, width="100", height="100")
                        else
                            p No image available
                    td #{items.Name}
                    td Â£#{items.Price}
                    td #{items.Description}

