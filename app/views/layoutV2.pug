doctype html
html
  head
    title #{title}  // Dynamically sets the page title

    // Metadata for responsiveness and encoding
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    // Link to styles file
    link(rel="stylesheet", href="/reservations.css")
    script(src="/table_reservation.js")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  
  body
    nav.nav-bar
        .nav-center
            button(onclick="window.location.href='/'" aria-label="Navigate to Home") Home
            button(onclick="window.location.href='/restaurants'" aria-label="Navigate to Restaurant Profile") Restaurant
            button(onclick="window.location.href='/menu'" aria-label="Navigate to Menu Page") Menu

        .nav-right
            if loggedIn
                // Cart Icon Button
                button#cart-button(onclick="window.location.href='/cart'", aria-label="View Cart")
                    img(src="/img/cart_icon.png", alt="Cart", width="24", height="24")
                // Logout Button
                button(onclick="window.location.href='/logout'", aria-label="Logout") Logout
            else
                // Sign In Button
                button#signin-button(onclick="window.location.href='/login'" aria-label="Sign In") Sign In

    // Placeholder for specific page content
    block content  
    
