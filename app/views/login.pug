extends layout

block content1 
  .container
    //- Logo Placeholder
    .logo-placeholder

    //- Heading
    h1 Welcome to Dine Smart Login
    p.sub-heading Please enter your details to log in.

    //- Login Form
    form(action="/login" method="post")
      label(for="email") Email
      input#email(type="email" placeholder="Enter your email" required)

      label(for="password") Password
      input#password(type="password" placeholder="Enter your password" required)

      //- Buttons
      button.btn-login(type="submit") Log In
      button.btn-back(type="button") Back

  //- Footer Links
  .footer
    | &copy; DineSmart 2024 
    a(href="#") Privacy
    a(href="#") Our mission
    a(href="#") Q&A.
